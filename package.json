{
  "name": "bwt-backend-v2",
  "type": "module",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "dev:bun": "bun --hot src/index.ts",
    "start": "bun ./dist/src/index.js",
    "start:bun": "bun ./dist/src/index.js",
    "typecheck": "bun x tsc --noEmit",
    "lint": "bun x eslint .",
    "lint:fix": "bun x eslint . --fix",
    "test": "bun x vitest",
    "build": "bun x esbuild src/index.ts --bundle --platform=node --tsconfig=tsconfig.json --outfile=dist/src/index.js",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "db-generate": "bun x drizzle-kit generate",
    "db-migrate": "bun x drizzle-kit migrate",
    "db-drop": "bun x drizzle-kit drop",
    "db-introspect": "bun x drizzle-kit introspect",
    "db-push": "bun x drizzle-kit push",
    "db-studio": "bun x drizzle-kit studio --port 4000",
    "deploy": "git pull && bun install && bun run db-generate && bun run db-migrate && bun run build && pm2 restart bwt-backend --update-env",
    "deploy-dev": "git pull && bun install && bun run db-generate && bun run db-migrate && bun run build && pm2 restart bwt-backend-v2-dev --update-env"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-openapi": "^0.19.6",
    "@scalar/hono-api-reference": "^0.8.9",
    "bcrypt-ts": "^7.0.0",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.7.9",
    "hono-pino": "^0.8.0",
    "local-file-upload": "^1.1.2",
    "nanoid": "^5.1.5",
    "pg": "^8.16.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.1",
    "stoker": "^1.4.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.0",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.26.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint . --fix"
    ]
  }
}
